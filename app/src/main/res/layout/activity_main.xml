<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"/>
                <RadioGroup
                    android:id="@+id/rg_trans_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <RadioButton
                        android:id="@+id/rb_cw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="CASH" />
                    <RadioButton
                        android:id="@+id/rb_be"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance" />
                    <RadioButton
                        android:id="@+id/rb_mini"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:layout_height="wrap_content"
                        android:text="Mini Statement" />
                    <RadioButton
                        android:id="@+id/rb_adhaarpay"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:layout_height="wrap_content"
                        android:text="AadhaarPay" />

                </RadioGroup>
            </LinearLayout>



            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:hint="Amount"
                android:layout_gravity="left"
                android:inputType="text"
                />

            <Button
                android:id="@+id/btn_matm1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="MATM 1"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />

            <Button
                android:id="@+id/btn_check"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Check"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />


            <Button
                android:id="@+id/btn_proceed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="MATM 2"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />
            <Button
                android:id="@+id/proceedBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="AEPS"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />

            <Button
                android:id="@+id/btn_pair"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="PAIR"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />

            <Button
                android:id="@+id/upiPagebtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="UPI Transactopn"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />

            <Button
                android:id="@+id/BtnUnpair"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="UnPair"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />


            <Button
                android:id="@+id/btnmatm1pair"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Pair MATM1"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />


            <Button
                android:id="@+id/Btndriver"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Driver Setup"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />
            <Button
                android:id="@+id/BtnDMT"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="DMT"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColorHint="@android:color/white" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
