<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/failureLayout"
        android:visibility="gone"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_padding"
        android:padding="@dimen/card_padding"
        android:id="@+id/failureTitleTextView"
        android:textColor="@color/white"
        android:text="FAILURE"
        android:gravity="center"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:id="@+id/failureDetailTextView"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/circle">
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_padding"
                android:padding="@dimen/card_padding"
                android:src="@drawable/ic_close_red_24dp"/>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/red_button_bg"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:id="@+id/okButton"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:text="OK"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/successLayout"
        android:visibility="gone"
        android:background="@android:color/holo_green_dark"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:textColor="@color/white"
            android:text="SUCCESS"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/detailsTextView"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Balance Enquery for customer account linked with aadhar card XXXX-XXXX-5670 was successful. \n \n Bank Name : State Bank Of India \n Reference No : 536645545545 \n Account Balance : 6466.98 \n Transaction Amount : 546.00"
            android:gravity="left"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_circle">-->
            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:src="@drawable/ic_check_circle_black_24dp"/>


<!--
        </LinearLayout>
-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_padding"
            android:background="@drawable/red_button_bg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/printButton"
            android:padding="@dimen/card_padding"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:text="PRINT"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_padding"
                android:background="@drawable/red_button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/cancelButton"
                android:gravity="center"
                android:padding="@dimen/card_padding"
                android:layout_gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:text="CANCEL"/>-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_padding"
                android:background="@drawable/red_button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/printButton"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:text="PRINT"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_padding"
                android:background="@drawable/red_button_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/okSuccessButton"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:text="OK"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
