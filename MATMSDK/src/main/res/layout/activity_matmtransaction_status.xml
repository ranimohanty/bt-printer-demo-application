<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/failureLayout"
        android:visibility="gone"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:id="@+id/failureTitleTextView"
            android:textColor="@color/white"
            android:text="FAILURE"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:id="@+id/failureDetailTextView"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/circle">
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_padding"
                android:padding="@dimen/card_padding"
                android:src="@drawable/ic_close_red_24dp"/>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/red_button_bg"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:id="@+id/okButton"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:text="OK"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/successLayout"
        android:visibility="visible"
        android:background="@android:color/holo_green_dark"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:textColor="@color/white"
            android:text="SUCCESS"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/detailsTextView"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:padding="@dimen/card_padding"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text=" Cash Withdrawal for Card number is sucessfully completed . \n \n Transaction Status : Card Transaction Successfully \n Reference No : 536645545545 \n Available Balance : 6466.98 \n Transaction Amount : 546.00 \n Transaction Date and TIme : 2018-11-06 13:26:03 \n Terminal ID : IS000004"
            android:gravity="left"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:padding="@dimen/card_padding"
            android:src="@drawable/ic_check_circle_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/red_button_bg"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_margin="@dimen/_3sdp"
                android:layout_weight="1"
                android:id="@+id/okSuccessButton"
                android:text="OK"/>
            <Button
                android:id="@+id/printBtn"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="@string/print_btn"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_margin="@dimen/_3sdp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/red_button_bg"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
